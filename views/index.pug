extends layout

block content
  header
  
  section.video(channal=channal)
    .cats
      each item in channals
        a(href='/page/'+item.key+'/list',class=channal==item.key ? 'active':'') #{item.title}
      span.op
        - var n = parseInt(page)
        -if(page>1)
          a(href='/page/'+channal+'/list?cat='+cat+'&page='+(n-1)) 上页
        a(href='/page/'+channal+'/list?cat='+cat+'&page='+(n+1)) 下页
        div.btn-cat

    .cats.subcats
      -if(enable_search)
        div.key-search
          input(type="text",value=q)
      each item in cats
        a(href='/page/'+channal+'/list?cat='+item.key,class=cat==item.key ? 'active':'') #{item.title}
      
    .content
      ul
        each item in data
          li
           - var host0=host.split("\\/")
           - var newurl0=host+'/page/'+channal+'/'+item.viewkey
           - var newurl=newurl0.replace(host+"/page/nrop19/","https://91.yzyz.ml/video.php?url=")
            a(target="_blank",href=host,title=item.title)
              -if(item.img)
                .thumb(style="background-image:url("+item.img+")")
              .cnt
                span.title #{item.title}
  script.
    $(function(){
      $('.btn-cat').on('click' , function(){
        $('.video').toggleClass('show-cats')
      })

      $('.key-search input').on('keyup' , function(event){
        if(event.keyCode ==13){
          var k = $(this).val()
          if(k){
            var s = location.search
            if(s.indexOf('?')>=0){
              location.href = s + '&q=' + k
            }else{
              location.href = s + '?q=' + k
            }
          }
        }
        
      })
    })

  

  
